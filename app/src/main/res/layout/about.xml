<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/goldstar"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:fontFamily="@font/berkshire_swash"
            android:text=" About US  "
            android:textColor="#000"
            android:textSize="30sp" />


    </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_below="@id/about_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_below="@id/textView3"
        android:src="@drawable/waji"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:id="@+id/imageView2" />




    <TextView
        android:textColor="#000"
        app:fontFamily="@font/berkshire_swash"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Abdul Wajid  "
        android:textSize="20sp"
        android:textStyle="bold"/>

                <TextView
                    android:textColor="#000"
                    android:id="@+id/textView4"
                    android:fontFamily="@font/courgette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="  I am Android Developer.I am passionate in development of Android Application. My strongest skills are in Object Oriented Programming, Design Pattern,Java Core and Android. I am a team-oriented, Quick learner and analytical problem solver,  I am highly motivated in working on different technologies and also have an ability to work and deliver under pressure." />

                        <View
                            android:id="@+id/view"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_margin="10dp"
                            android:layout_alignParentBottom="true"
                            android:background="#000" />

        </RelativeLayout>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_below="@id/rl_info"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courgette"
            android:text="abdulwajid9997@gmail.com"
            android:textColor="#000"
            android:textSize="18sp" />


    </RelativeLayout>
</ScrollView>